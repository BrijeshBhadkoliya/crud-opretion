<body align="center">
    Name: <input width=400px type="text" placeholder="Enter your Name" class="jok1" id="NameU"><br>
    Phone: <input type="text" placeholder="Enter your PhoneNumber" class="jok2" id="PhoneU"><br>
    <input type="button" value="Submit" class="jok3" onclick="Submit()">
    <input type="button" value="Edit" class="jok4">

    <table border="1" style="margin: 20px auto;" cellpadding="10px">
        <thead>
            <tr style="font-size: 25px;">
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Remove</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody id="tbody">

        </tbody>
    </table>
    <script>

        let products = [];

        function Submit() {



            let UserName = document.getElementById("NameU").value;
            let UserPhone = document.getElementById("PhoneU").value;

            let tBody = document.getElementById('tbody');

            if (!UserPhone && !UserName) {
                alert('Please fill in the required fields');
                return;
            }
            alert('your data is add')
            document.getElementById("NameU").value = "";
            document.getElementById("PhoneU").value = "";

            let obj = {
                id: Math.floor(Math.random() * 100),
                name: UserName,
                phone: UserPhone
            }

            products.map((val) => {

                tBody.innerHTML += `<tr>
<td>${val.id}</td>
<td>${val.name}</td>
<td>${val.phone}</td>
<td><input type="button" onclick="Delet(${val.id})" value="Delete" class="jok3" ></td>
<td><input type="button" value="Update" class="jok3"></td>
</tr>`;
            })
            products.push(obj);

        }


        function Delet(id) {
            let more = products.filter((val) => val.id != id)
            console.log(more);
        }
    </script>
</body>

